<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_card">

        <TextView
            android:id="@+id/tvCommentBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commentBy"/>
        <TextView
            android:id="@+id/tvCommentAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/commentAuthor"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tvCommentBy"/>
        <TextView
            android:id="@+id/tvItemCommentOpinion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvCommentBy"
            android:text="opinion"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>